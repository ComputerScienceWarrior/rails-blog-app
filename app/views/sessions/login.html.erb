<div class='login-form'>
    <%= form_for :user, url: login_path, method: :post do |f| %>
        <%= f.label :username %>:
        <%= f.text_field :username %>
        <br><br>
        <%= f.label :password %>:
        <%= f.text_field :password %>
        <br><br>
        <%= f.submit "Login"%>
    <% end %>
</div>